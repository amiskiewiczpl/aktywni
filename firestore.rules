rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{id} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2099,1,1);
    }
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /signups/{id} {
      allow read, write: if true;
    }
    match /{document=**} {
      allow read: if true;
    }
  }
}
